<div class="pet-card <%= 'owned' if owner %>">
  <% if pet.image_link.present? %>
    <div class="pet-image" style="background-image: url('<%= pet.image_link %>')"></div>
  <% else %>
    <div class="pet-image pet-image-placeholder">
      <span>ğŸ¾</span>
    </div>
  <% end %>
  
  <div class="pet-card-content">
    <h3><%= pet.name %></h3>
    <p>Chip ID: <%= pet.chip_id %></p>
    <p>Species: <%= pet.species.name %></p>
    <p>Adopted: <%= pet.adopted_at.strftime("%B %d, %Y") %></p>
    <p>
      <span class="vaccination-status <%= pet.vaccination_status ? 'vaccinated' : 'not-vaccinated' %>">
        <%= pet.vaccination_status ? 'Vaccinated' : 'Not Vaccinated' %>
      </span>
    </p>
    
    <div class="pet-card-actions">
      <%= link_to 'View Profile', pet_path(pet), class: 'btn btn-secondary' %>
      <% if owner %>
        <%= link_to 'Edit', edit_pet_path(pet), class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div> 