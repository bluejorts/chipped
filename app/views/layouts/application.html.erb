<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Chipped" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <!-- <meta name="apple-mobile-web-app-capable" content="yes"> -->
    <!-- <meta name="mobile-web-app-capable" content="yes"> -->
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav class="navbar">
      <div class="container">
        <%= link_to 'Chipped', root_path, class: 'navbar-brand' %>
        <div class="nav-links">
          <% if logged_in? %>
            <%= link_to 'My Pets', pets_path %>
            <%= button_to 'Logout', logout_path, method: :delete, class: 'btn btn-link' %>
          <% else %>
            <%= link_to 'Sign Up', signup_path %>
            <%= link_to 'Log In', login_path %>
          <% end %>
        </div>
      </div>
    </nav>

    <% if notice %>
      <div class="alert alert-success"><%= notice %></div>
    <% end %>
    
    <% if alert %>
      <div class="alert alert-danger"><%= alert %></div>
    <% end %>

    <main class="container">
      <%= yield %>
    </main>

    <footer class="footer">
      <div class="container">
        <p>&copy; <%= Time.current.year %> Chipped. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>
